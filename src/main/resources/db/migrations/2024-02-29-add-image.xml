<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="2024-02-29-add-image" author="eugene">

        <createTable tableName="image">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true"/>
            </column>
            <column name="original_name" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="size" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="link" type="VARCHAR">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="image"
                                 baseColumnNames="user_id"
                                 constraintName="fk_image_user_id"
                                 referencedTableName="users"
                                 referencedColumnNames="id"/>

        <createIndex tableName="image" indexName="idx_image_user_id">
            <column name="user_id"/>
        </createIndex>

    </changeSet>
</databaseChangeLog>